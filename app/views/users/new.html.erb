<h2>新規登録</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@user.errors.count, "件のエラー") %>が発生しました:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: users_path, local: true do |form| %>
  <!-- hidden field で from パラメータを保持 -->
  <%= hidden_field_tag :from, params[:from] if params[:from].present? %>
  
  <div>
    <%= form.label :name, "ユーザID" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>
