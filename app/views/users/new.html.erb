<div class="max-w-md mx-auto mt-8 space-y-6">
  <h2 class="text-2xl font-bold text-center">サインアップ</h2>

  <% if @user.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 p-4 rounded mb-4">
      <h4 class="font-bold mb-2">
        <%= pluralize(@user.errors.count, "件のエラー") %>が発生しました:
      </h4>
      <ul class="list-disc list-inside">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: users_path, local: true, class: "space-y-4" do |form| %>
    <%= hidden_field_tag :from, params[:from] if params[:from].present? %>

    <div>
      <%= form.label :name, "ID", class: "block mb-1 font-semibold" %>
      <p class="text-sm text-gray-500 mb-1">
        ※個人の特定につながるIDの登録はお控えください。
      </p>
      <%= form.text_field :name, class: "w-full border border-gray-300 rounded p-2" %>
    </div>

    <div>
      <%= form.label :password, "パスワード", class: "block mb-1 font-semibold" %>
      <p class="text-sm text-gray-500 mb-1">
        ※他サイト等との使いまわしはお控えください。
      </p>
      <%= form.password_field :password, class: "w-full border border-gray-300 rounded p-2" %>
    </div>

    <div class="text-center">
      <%= form.submit "登録する", class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>