<header class="bg-[#6b3f00] text-white">
  <div class="max-w-4xl mx-auto flex items-center justify-between px-4 py-3">
    <h1 class="text-2xl font-bold">
      <%= link_to "NDCクイズ", root_path, class: "hover:underline" %>
    </h1>
    <nav class="space-x-4">
      <% if current_user %>
        <%= link_to "お気に入り一覧", mypage_path, class: "hover:underline" %>
        <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "hover:underline" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "hover:underline" %>
        <%= link_to "サインアップ", signup_path, class: "hover:underline" %>
      <% end %>
    </nav>
  </div>
</header>